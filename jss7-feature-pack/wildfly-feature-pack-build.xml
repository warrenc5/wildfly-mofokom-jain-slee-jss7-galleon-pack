<build xmlns="urn:wildfly:feature-pack-build:3.1" producer="org.mobicents.protocols.ss7:wildfly-restcomm-ss7-galleon-pack">
    <transitive>
        <dependency group-id="org.wildfly" artifact-id="wildfly-ee-galleon-pack">
            <name>org.wildfly:wildfly-ee-galleon-pack</name>
            <packages inherit="true">
                <exclude name="product.conf" />
            </packages>
            <default-configs inherit="false" />
        </dependency>
     <dependency group-id="org.wildfly" artifact-id="wildfly-galleon-pack">
            <name>org.wildfly:wildfly-galleon-pack</name>
            <default-configs inherit="false" />
            <packages inherit="true">
            </packages>
        </dependency>
        <dependency group-id="org.wildfly.core" artifact-id="wildfly-core-galleon-pack">
            <name>org.wildfly.core:wildfly-core-galleon-pack</name>
            <default-configs inherit="false" />
            <packages inherit="true">
            </packages>
        </dependency>
        <dependency group-id="org.wildfly" artifact-id="wildfly-servlet-galleon-pack">
            <name>org.wildfly:wildfly-servlet-galleon-pack</name>
            <default-configs inherit="false" />
            <packages inherit="true">
            </packages>
        </dependency>
    </transitive>
    <dependencies>
        <dependency group-id="org.mobicents.servers.jainslee.core" artifact-id="wildfly-mobicents-slee-galleon-pack">
            <name>org.mobicents.servers.jainslee.core:wildfly-mobicents-slee-galleon-pack</name>
            <packages inherit="true" />
            <default-configs inherit="true" />
        </dependency>
    </dependencies>
    <default-packages>
        <package name="org.mobicents.ss7.commons" />
        <package name="org.mobicents.ss7.modules" />
        <package name="org.mobicents.ss7.extension" />
    </default-packages>
    <generate-feature-specs>
        <extensions>
            <standalone>
                <extension>org.mobicents.ss7.extension</extension>
            </standalone>
            <domain>
                <extension>org.mobicents.ss7.extension</extension>
            </domain>
        </extensions>
    </generate-feature-specs>
</build>
